<%= form_with model: chronicle, url: user_chronicles_path, class: "contents" do |form| %>
    <% if chronicle.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(chronicle.errors.count, "error") %> prohibited this chronicle from being saved:</h2>
  
        <ul>
          <% chronicle.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.text_field :name, class: "", placeholder: "Name" %>
    </div>
  
    <div class="field">
      <%= form.text_field :amount, class: "", placeholder: "Amount" %>
    </div>
  
    <div class="field">
      <p>Categories</p>
      <%= form.select :group_id, options_from_collection_for_select(Group.all, :id, :name) %>
    </div>
  
    <div class="field">
      <%= form.submit "Save", class: "submit" %>
    </div>
  <% end %>